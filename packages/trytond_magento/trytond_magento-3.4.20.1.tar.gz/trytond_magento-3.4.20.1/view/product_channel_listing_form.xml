<?xml version="1.0"?>
<data>
    <xpath expr="//field[@name='product_identifier']" position="after">
    <group colspan="4" id="magento" states="{'invisible': Eval('channel_source') != 'magento'}">
        <label name="magento_product_type"/>
        <field name="magento_product_type"/>
    </group>
    </xpath>
    <xpath expr="/form/notebook" position="inside">
        <page id="price_tiers" string="Price Tiers" states="{'invisible': Eval('channel_source') != 'magento'}">
            <field name="price_tiers"/>
        </page>
    </xpath>
</data>
