<form class="form">
    {% if not current_user.is_anonymous %}
        <div class="avatar">
            <img src="{{ current_user.picture.get_url(width=50, height=50) }}" alt="{{ current_user.full_name }}">
        </div>
    {% endif %}

    <div class="input">
        <div class="messages"></div>
        <input class="reply-to" type="hidden">
        <label for="{{ widget.uid }}-textarea" class="sr-only">{{ t('pytsite.comments_native@comment_body') }}</label>
        <textarea required name="{{ widget.uid }}" id="{{ widget.uid }}-textarea"
                  placeholder="{{ t('pytsite.comments_native@enter_your_comment') }}"
                  class="form-control comment-body"></textarea>
        <div class="actions">
            <button class="btn btn-primary btn-submit">{{ t('pytsite.comments_native@post_comment') }}</button>
        </div>
    </div>
</form>

<div class="comments-list"></div>
