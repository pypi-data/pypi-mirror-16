#!/usr/bin/env bash
{ set +x; } 2>/dev/null

usage="usage: ${BASH_SOURCE[0]##*/} path"

[[ $# != 1 ]] || [[ -z $1 ]] || [[ $1 == "--help" ]] && {
	echo "$usage"
	[[ $1 == "--help" ]]; exit # exit 0 if --help
}

[[ "$1" == */* ]] && ! [ -e "${1%/*}" ] && {
	( set -x; mkdir -p "${1%/*}" ) || exit
}
( set -x; touch "$1" )
