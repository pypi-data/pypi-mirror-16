{% block project %}[{{ PROJECT_NAME }}]
frontend = apache2.4
process_manager = systemd
{% endblock %}

{% block multideb %}[multideb]
exclude{% if use_python3 %}3{% endif %} = debtools
    setuptools
    stdeb
    grin
    distribute
    pip
    pytz
    futures
    sqlparse
    gunicorn
    kombu
    celery
    billiard
    pytz
    {{ PROJECT_NAME }}
{% block multideb_extra_exclude %}{% endblock %}
{% endblock %}

{% block djangofloor %}[djangofloor]
{% if use_python3 %}Depends3 = python3 (>= 3.2), python3-django (>= 1.9.0), python3-django-debug-toolbar, python3-django-allauth (>= 0.19.0), gunicorn (>=0.14.5), python3-django-bootstrap3 (>= 5.0.0), python3-django-debug-toolbar (>= 1.2.0), python3-django-pipeline (>= 1.5.0), python3-celery (>=3.1.13), python3-django-redis (>= 3.8.3), python3-django-redis-cache (>= 0.13.1)
{% else %}Depends = python (>= 2.7), python-django (>= 1.9.0), python-django-debug-toolbar, python-django-allauth (>= 0.19.0), gunicorn (>=0.14.5), python-django-bootstrap3 (>= 5.0.0), python-django-debug-toolbar (>= 1.2.0), python-django-pipeline (>= 1.5.0), python-celery (>=3.1.13), python-django-redis (>= 3.8.3), python-django-redis-cache (>= 0.13.1)
{% endif %}{% endblock %}

{% block django_redis %}[django-redis]
{% if use_python3 %}Depends3 = python3 (>= 3.2), python3-redis (>= 1.8.0), python3-msgpack
{% else %}Depends = python (>= 2.7), python (<< 2.8), python-redis (>= 1.8.0), python-msgpack
{% endif %}post_source = djangofloor.deb_fixes.fix_django_redis
{% endblock %}

{% block gunicorn %}[gunicorn]
Package = gunicorn
{% endblock %}
