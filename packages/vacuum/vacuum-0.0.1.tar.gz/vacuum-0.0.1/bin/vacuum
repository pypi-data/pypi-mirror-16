from __future__ import print_function, unicode_literals
import sys
import vacuum
from vacuum.config import get_config


def get_opera():
    if len(sys.argv) < 2:
        return 'scanning'

    opera = sys.argv[1]
    if opera not in ['scanning', 'backup']:
        print('not supported', opera)
        sys.exit(1)

    return opera

if __name__ == "__main__":
    opera = get_opera()
    if opera == 'scanning':
        vacuum.scanning()

    elif opera == 'backup':
        vacuum.backup()

